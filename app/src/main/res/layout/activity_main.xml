<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch Cam"
        android:id="@+id/toggleCamera"
        android:checked="false"
        android:clickable="true"
        android:textOn="Swap"
        android:textOff="Swap"
        android:onClick="onCameraChange"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleMuteCamera"
        android:checked="false"
        android:clickable="true"
        android:textOn="Unmute"
        android:textOff="Mute"
        android:onClick="onCameraMute"
        android:layout_toRightOf="@+id/toggleCamera"
        android:layout_toEndOf="@+id/toggleCamera"
        />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:layout_alignBottom="@+id/toggleMuteCamera"
        android:layout_toRightOf="@+id/toggleMuteCamera"
        android:layout_above="@+id/videoView"
        android:layout_toLeftOf="@+id/toggleButton"
        android:layout_toStartOf="@+id/toggleButton"
        android:textAlignment="gravity"
        android:layout_alignTop="@+id/toggleMuteCamera"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:gravity="center_vertical|center_horizontal" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/toggleButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false"
        android:clickable="true"
        android:onClick="onLogin"
        android:textOn="Logoff"
        android:textOff="Login" />


    <android.opengl.GLSurfaceView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/videoView"
        android:layout_below="@+id/toggleButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/toggleButton"
        android:layout_alignEnd="@+id/toggleButton" />

</RelativeLayout>
